<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica.Views.Main.Carousel.Carousel1"
             Title="Carousel Page 1"
             BackgroundColor="#2f4259">
    
    <ContentPage.Content>
        <StackLayout
            Padding="20"
            Spacing="10">

            <Label 
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="Carousel Page 1!"
                TextColor="White"/>

            <Label 
                FontAttributes="Italic"
                HorizontalOptions="CenterAndExpand" 
                Text="Deslice hacia el lado derecho para ver la siguiente pagina!"
                TextColor="White"
                VerticalOptions="CenterAndExpand" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>