<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica.Views.Main.Carousel.Carousel2"
             Title="Carousel Page 2"
             BackgroundColor="#2f4259">
    
    <ContentPage.Content>
        <StackLayout
            Padding="20"
            Spacing="10">
            
            <Label 
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="Carousel Page 2!"
                TextColor="White"/>

            <Label 
                FontAttributes="Italic"
                HorizontalOptions="CenterAndExpand" 
                Text="Deslice hacia el lado izquierdo para ver la pagina anterior!"
                TextColor="White"
                VerticalOptions="CenterAndExpand" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>