<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica.Views.Main.DetailPage"
             Title="Detail Page"
             BackgroundColor="#2f4259">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="primary">#3ec3d5</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>

        <Label
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalOptions="Center"
            Margin="0,10,0,0"
            Text="Bienvenido"
            TextColor="{StaticResource primary}"/>

        <Label
            FontAttributes="Bold"
            FontSize="Medium"
            HorizontalOptions="Center"
            TextColor="White"
            x:Name="Usuario"/>

        <Label
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalOptions="Center"
            TextColor="White"
            VerticalOptions="StartAndExpand"
            x:Name="dateLabel"/>

        <Label
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalOptions="Center"
            Margin="0,0,0,20"
            TextColor="White"
            VerticalOptions="End"
            x:Name="timeLabel"/>

    </StackLayout>
</ContentPage>