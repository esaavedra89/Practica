<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica.Views.Main.BottomBar.BottomPage3"
             BackgroundColor="#2f4259">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="primary">#3ec3d5</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout
            Padding="20"
            Spacing="10">

            <Label
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalOptions="Center" 
                Text="Escaneo de Codigo de Barra!"
                TextColor="{StaticResource primary}"/>

            <Button
                BackgroundColor="{StaticResource primary}"
                BorderRadius="25"
                Clicked="ScanButton_Clicked"
                FontAttributes="Bold"
                HeightRequest="50"
                Text="Escanear"
                TextColor="White"/>

        </StackLayout>
    </ScrollView>
</ContentPage>