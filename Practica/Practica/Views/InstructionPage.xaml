<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica.Views.InstructionPage"
             BackgroundColor="#2f4259">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="primary">#3ec3d5</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout
        HorizontalOptions="Center"
        Padding="20"
        VerticalOptions="Center">
        
        <Label
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalOptions="Center"
            Text="Pagina de Instrucciones"
            TextColor="White"/>
        
        <Label 
            FontAttributes="Italic"
            Text="Esta pagina es para colocar especie de instrucciones"
            TextColor="{StaticResource primary}"/>
        
        <Button
            BackgroundColor="{StaticResource primary}"
            Clicked="Registro_Clicked"
            FontAttributes="Bold"
            HeightRequest="50"
            HorizontalOptions="FillAndExpand"
            Margin="0,10,0,0"
            Text="Siguiente"
            TextColor="White"/>
        
    </StackLayout>
</ContentPage>